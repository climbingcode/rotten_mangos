<div class="well">
  <div class="form">
    
    <%= form_for @movie, :html => {:multipart => true} do |f| %>
      <div class="form-group">
        <%= f.label "title" %><br>
        <%= f.text_field "title" %>
      </div>
      <div>
        <%= f.label "release_date" %><br>
        <%= f.date_field "release_date" %>
      </div>
      <div>
        <%= f.label "director" %><br>
        <%= f.text_field "director" %>
      </div>
        <div>
        <%= f.label "category"%>
        <%= select_tag :category, options_for_select(['all', 'comedy', 'action', 'romance', 'drama', 'horror'])%>
      </div>
      <div>
        <%= f.label "runtime_in_minutes" %><br>
        <%= f.number_field "runtime_in_minutes" %>
      </div>
      <div>
        <%= f.label "add the movie poster here" %><br>
        <%= f.file_field :movieposter %>
      </div>
        <%= f.label "or add the Url to the movie poster here" %><br>
        <%= f.text_field "poster_image_url" %>
      <div>
        <%= f.label "description" %><br>
        <%= f.text_area "description" %>
      </div>
      <div>
        <%= f.submit "Submit" %> 
      </div>
    <% end %>

    <%= form_for @movie do |f| %>
      <% if @movie.errors.any? %>
        <div>
          <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
          <ul>
            <% @movie.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
